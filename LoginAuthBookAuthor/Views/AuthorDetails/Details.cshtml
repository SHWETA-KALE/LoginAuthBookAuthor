@model LoginAuthBookAuthor.Models.AuthorDetails

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div>
    <br />
    <h2>Personal Details</h2>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Author.UserName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Author.UserName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Author.Age)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Author.Age)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Author.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Author.Email)
        </dd>
    </dl>
    @if (Model.IsActive)
    {
        <hr />
        <h5>Address</h5>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Street)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Street)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.City)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.City)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.State)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.State)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Country)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Country)
            </dd>
        </dl>
        <p>
            @Html.ActionLink("Edit Address", "Edit", new { id = Model.Id }) |
            @Html.ActionLink("Delete Address", "Delete", new { id = Model.Id }) |
            @Html.ActionLink("View Your Books", "GetBooks", "Book", new { id = Model.Id }, null)
        </p>
    }
    else
    {
        <p>No Address details available</p>
        <p>
            @Html.ActionLink("Add New Address", "Edit", new { id = Model.Id }) |
            @Html.ActionLink("View Your Books", "GetBooks", "Book", new { id = Model.Id }, null)
        </p>
    }

</div>